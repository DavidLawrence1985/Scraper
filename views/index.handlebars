<div class="wrapper">

        <h1 id="main-title">articles</h2>
            <ul class="list">
            {{#each articles }}
                
            <li>
                    <h2 id="article-title">{{title}}</h1>
                    <p class="summary" >{{summary}}</p>
                    <a href="{{link}}" id="story" class="list-button">View Story</a>
                    <!-- <h5>comments</h5>
                        <p id="comments" data-id={{_id}}></p> -->
                    <p  id="view-note" class="list-button note-modal" data-id={{_id}} data-toggle="modal" data-target="#view-note-modal">View Note</p>
                    <p  id="new-note" class="list-button" data-id={{_id}} data-toggle="modal" data-target="#create-note-modal" >Create Note</p>
                    
            </li>      
                
            {{/each}}
            </ul>

            <div class="modal" id="create-note-modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">New Note</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="notes-wrapper">       
                            <h5 id="note-header"></h5>
                            <div id="note-title"></div>
                            <div id="note-body"></div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div id="close-note-btn" data-dismiss="modal"></div>
                        <div id="save-note-btn"></div>
                        <div id="delete-note-btn"></div>
                    </div>
                    </div>
                </div>
            </div>

            <div class="modal" id="view-note-modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Comments</h5>
                        <!-- <p id="comments" data-id={{_id}}></p> -->
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="view-comments">       
                        {{!-- inser comments  --}}
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="list-button" id="close-note-btn" data-dismiss="modal">Close</div>
                    </div>
                    </div>
                </div>
            </div>


            
               

            

              
            

           <!-- <div id="notes box-2" ></div>-->

            
        
    </div>